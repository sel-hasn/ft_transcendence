  "scripts": {
    "build": "tsc",
    "start": "tsx src/auth/server.ts",
    "dev": "nodemon --watch './**/*.ts' --exec 'tsx' src/auth/server.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "^20.0.0 || ^22.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^8.4.0",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@sinclair/typebox": "^0.34.41",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "@fastify/jwt": "^5.0.1",
    "fastify-plugin": "^5.1.0",
    "ft_transcendance_shared": "github:Jnba23/ft_transcendance_shared#main",
